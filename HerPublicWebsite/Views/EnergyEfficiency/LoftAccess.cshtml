@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using HerPublicWebsite.BusinessLogic.Models.Enums
@using HerPublicWebsite.Controllers

@model HerPublicWebsite.Models.EnergyEfficiency.LoftAccessViewModel
@{
    ViewBag.Title = "Loft access";
}

@section BeforeMain {
    @await Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = Model.BackLink,
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action(nameof(EnergyEfficiencyController.LoftAccess_Post), "EnergyEfficiency", new {reference = Model.Reference})" method="post" novalidate>
            @(Html.HiddenFor(m => m.EntryPoint))
            @Html.AntiForgeryToken()
            
            @{
                Func<object, object> details = 
                    @<text>
                        <p class="govuk-body">
                            You may have a loft hatch, access ladder or stairs that could allow an insulation installer to get into the loft space.
                        </p>
                     </text>;
                
                Func<object, object> blueBannerHint =
                    @<p class="govuk-body">
                        Homes of your type typically
                        <strong>
                            @(Model.HintHaveLoftAndAccess ? "have access to their loft" : "do not have access to their loft.")
                        </strong>
                    </p>;
            }
            
            @(await Html.GovUkRadiosFor(m => m.LoftAccess,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Text = "Is there access to your loft?",
                        Classes = "govuk-fieldset__legend--l",
                        IsPageHeading = true
                    }
                },
                new HintViewModel
                {
                    Html = @<text>
                               <p class="govuk-body">
                                   You may have a loft hatch, access ladder or stairs that could allow an insulation installer to get into the loft space.
                               </p>
                               
                               @await Html.GovUkInsetText(new InsetTextViewModel
                               {
                                   Classes = "sea-epc-hint",
                                   Html = blueBannerHint
                               })
                            </text>
                }
                ))

            @await Html.GovUkButton(new ButtonViewModel
            {
                Text = "Continue"
            })
            
        </form>
        
    </div>
</div>
