@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using HerPublicWebsite.BusinessLogic.Models.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using HerPublicWebsite.Controllers

@model HerPublicWebsite.Models.Questionnaire.AddressViewModel
@{
    ViewBag.Title = "Address";
}

@section BeforeMain {
    @await Html.GovUkBackLink(new BackLinkViewModel
           {
               Text = "Back",
               Href = Model.BackLink,
           })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form action="@Url.Action(nameof(QuestionnaireController.Address_Post), "Questionnaire")" method="post" novalidate>
            @Html.AntiForgeryToken()
            @(Html.HiddenFor(m => m.EntryPoint))

            <h1 class="govuk-heading-l">
                What is the address of your property?
            </h1>

            <p class="govuk-body">
                We need this information to find out the following:
            </p>
            <ul class="govuk-list govuk-list--bullet">
                <li>the energy efficiency of your home</li>
                <li>who your local authority could be</li>
                <li>if you live in an eligible postcode</li>
            </ul>

            @await Html.GovUkTextInputFor(m => m.BuildingNameOrNumber, labelOptions: new LabelViewModel()
                   {
                       Text = "Building number or name"
                   },
                       classes: "govuk-input--width-10",
                       placeholder: "e.g. 19 or Swiss Cottage"
                       )
            @await Html.GovUkTextInputFor(m => m.Postcode, labelOptions: new LabelViewModel()
                   {
                       Text = "Postcode"
                   },
                       classes: "govuk-input--width-10",
                       autocomplete: "postal-code",
                       placeholder: "e.g. AB12 3CD"
                       )

            @(await Html.GovUkButton(new ButtonViewModel
            {
                Text = "Continue",
            }))

        </form>

    </div>
</div>